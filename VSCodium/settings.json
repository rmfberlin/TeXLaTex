            {
              "name": "xelatex*3",
              "tools": [
                  "xelatex",
                  "xelatex",
                  "xelatex"
              ]
            },
            {
              "name": "xelatex -> glossaries -> biber -> xelatex*2",
              "tools": [
                  "xelatex",
                  "makeglossaries",
                  "biber",
                  "xelatex",
                  "xelatex"
              ]
            },
            {
              "name": "xelatex -> glossaries -> xelatex*2",
              "tools": [
                  "xelatex",
                  "makeglossaries",
                  "xelatex",
                  "xelatex"
              ]
            },
            {
              "name": "lualatex->biber->lualatex x2",
